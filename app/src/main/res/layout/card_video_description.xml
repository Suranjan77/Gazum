<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:focusable="true"
    android:padding="5dp"
    android:id="@+id/card_video_list"
    android:translationZ="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>
        <RelativeLayout
            android:paddingTop="5dp"
            android:layout_below="@+id/view_video_thumbnail"
            android:padding="3sp"
            android:id="@+id/view_video_description_container"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/view_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of Video"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/view_video_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:layout_below="@+id/view_video_title"
                android:layout_alignParentStart="true"
                android:text="Pwediepie"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>