<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <!-- Action Bar Start -->
    <RelativeLayout
        android:id="@+id/view_action_bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/view_location_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert" />
    </RelativeLayout>
    <!-- Action Bar End -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_action_bar"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Weather View Start -->
            <LinearLayout
                android:id="@+id/view_weather_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.pwittchen.weathericonview.WeatherIconView
                    android:id="@+id/view_weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:weatherIconColor="@color/colorWhite"
                    app:weatherIconResource="@string/wi_day_sunny"
                    app:weatherIconSize="70" />

                <TextView
                    android:id="@+id/view_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="cursive"
                    android:text="Kathmandu, Nepal"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="18"
                        android:textColor="@color/colorWhite"
                        android:textSize="90sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/view_temperature"
                        android:text="o"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/view_weather_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:paddingBottom="10sp"
                    android:text="Its rainy today! Let's watch some movies"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- Weather View End -->

            <!-- Video View Start -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/view_main_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

            </android.support.v7.widget.RecyclerView>
            <!-- Video View End -->
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_floating_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:elevation="6dp"
        android:src="@drawable/ic_search" />
</RelativeLayout>
